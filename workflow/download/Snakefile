rule download_fasta_human:
    threads: 1
    resources:
        mem_gb = 4
    params:
        url = 'https://www.encodeproject.org/files/GRCh38_no_alt_analysis_set_GCA_000001405.15/@@download/GRCh38_no_alt_analysis_set_GCA_000001405.15.fasta.gz'
    output:
        config['fasta']
    shell:
        "wget -O - {params.url} | gunzip -c > {output}"


rule download_gtf_human:
    threads: 1
    resources:
        mem_gb = 4
