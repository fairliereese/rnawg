rule download_cage:
    params:
        url = 'https://www.encodeproject.org/files/{wildcards.encode_id}/@@download/{wildcards.encode_id}.bed.gz'
    threads: 1
    resources:
        mem_gb = 4
    output:
        config['cage']['bed']
    shell:
        "wget -O - {params.url} | gunzip -c > {output}"


